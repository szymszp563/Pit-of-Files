<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Form</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.ThrowOfDicesServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/roll</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>a</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>a</param-value>
        </init-param>
    </servlet>
    
    <servlet>
        <servlet-name>CookiesAccess</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.CookiesAccess</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/roll</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>a</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>a</param-value>
        </init-param>  
    </servlet>
    <servlet-mapping>
        <servlet-name>Form</servlet-name>
        <url-pattern>/Form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookiesAccess</servlet-name>
        <url-pattern>/CookiesAccess</url-pattern>
    </servlet-mapping>
</web-app>
